<UserControl x:Class="CLauncher.GUI.PlayerComboBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CLauncher.GUI"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="700">
    <Viewbox>
        <DockPanel LastChildFill="False">
            <ComboBox x:Name="_player" Margin="5,5,0,5" MinWidth="100"/>
            <ComboBox x:Name="_side" Margin="5,5,0,5" MinWidth="100"/>
            <ComboBox x:Name="_color" Margin="5,5,0,5" MinWidth="100"/>
            <ComboBox x:Name="_team" Margin="5,5,0,5" MinWidth="50"/>
            <ComboBox x:Name="_local" Margin="5,5,0,5" MinWidth="50"/>
        </DockPanel>
    </Viewbox>
</UserControl>
